{% extends 'base.html.twig' %}

{% block title %}Ajouter une Visite{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h2 class="text-center mb-4">Ajouter une Visite</h2>

        {{ form_start(form) }}
            <div class="mb-3">
                {{ form_label(form.patient) }}
                {{ form_widget(form.patient, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.patient) }}
            </div>

            <div class="mb-3">
                {{ form_label(form.datePrevue) }}
                {{ form_widget(form.datePrevue, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.datePrevue) }}
            </div>

            <div class="mb-3">
                {{ form_label(form.duree) }}
                {{ form_widget(form.duree, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.duree) }}
            </div>

            <div class="mb-3">
                {{ form_label(form.compteRenduInfirmiere) }}
                {{ form_widget(form.compteRenduInfirmiere, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.compteRenduInfirmiere) }}
            </div>

            <button type="submit" class="btn btn-primary">Ajouter</button>
            <a href="{{ path('infirmiere_dashboard') }}" class="btn btn-secondary">Annuler</a>
        {{ form_end(form) }}
    </div>
{% endblock %}
