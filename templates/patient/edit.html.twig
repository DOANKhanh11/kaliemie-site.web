{% extends 'base.html.twig' %}

{% block title %}Modifier Patient{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="card shadow-sm border-0">
        <div class="card-header" style="background-color: rgb(76, 92, 175); color: white;">
            <h2 class="mb-0">Modifier le Patient</h2>
        </div>
        <div class="card-body">
            <!-- Form edit patient -->
            {{ include('patient/_form.html.twig', {'button_label': 'Mettre à jour', 'class': 'mb-3'}) }}

            <div class="d-flex justify-content-between">
                <!-- Link to return to patient list -->
                <a href="{{ path('app_patient_index') }}" class="btn btn-secondary mb-2">Retour à la liste</a>

                <!-- Delete form -->
                {{ include('patient/_delete_form.html.twig') }}
            </div>
        </div>
    </div>
</div>
{% endblock %}
