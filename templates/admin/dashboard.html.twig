{% extends 'base.html.twig' %}

{% block header %}
<header>
    <h1>
        Bienvenue, Administrateur {{ app.user.userIdentifier }}
        <a href="#" onclick="event.preventDefault(); document.getElementById('logout-form').submit();" 
           class="btn btn-outline-light btn-sm float-end me-4 mt-2">
           Se déconnecter
        </a>
    </h1>

    <form id="logout-form" action="{{ path('app_logout') }}" method="POST" style="display: none;">
        <input type="hidden" name="_csrf_token" value="{{ csrf_token('logout') }}">
    </form>
</header>
{% endblock %}

{% block title %}Tableau de bord Admin{% endblock %}

{% block body %}
<div class="container mt-4">
    <h3>Gestion des entités</h3>
        <div class="list-group">
            <a href="{{ path('app_patient_index') }}" class="list-group-item list-group-item-action">
                CRUD Patient
            </a>
            <a href="{{ path('app_soins_index') }}" class="list-group-item list-group-item-action">
                CRUD Soins
            </a>
            <a href="{{ path('app_visite_controller1_index') }}" class="list-group-item list-group-item-action">
                CRUD Visite
            </a>
<table class="table table-striped table-bordered table-hover align-middle mt-4">
    <thead class="table-dark">
        <tr>
            <th>Login</th>
            <th>Rôles</th>
        </tr>
    </thead>
    <tbody>
        {% for user in utilisateurs %}
            <tr>
                <td>{{ user.login }}</td>
                <td>{{ user.roles|join(', ') }}</td>
            </tr>
        {% endfor %}
    </tbody>
</table>
{% endblock %}

